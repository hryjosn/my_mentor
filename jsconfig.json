{
    "exclude": [
        "node_modules"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "ES6",
        "module": "es6",
        "paths": {
            "@*": [
                "src*"
            ],
            "@components": [
                "./src/components"
            ],
            "@/components/*": [
                "./src/components/*"
            ]
        },
        "experimentalDecorators": true
    }
}